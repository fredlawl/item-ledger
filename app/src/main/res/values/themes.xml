<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ItemLedger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <item name="textInputStyle">@style/Widget.ItemLedger.TextInputLayout</item>
    </style>

    <style name="Theme.ItemLedger.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ItemLedger.ActionBarPopUp" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.ItemLedger.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

    <style name="Widget.ItemLedger.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/transparent</item>
    </style>

</resources>